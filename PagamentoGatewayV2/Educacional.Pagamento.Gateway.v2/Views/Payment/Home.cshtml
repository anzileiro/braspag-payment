@model Educacional.Pagamento.Gateway.v2.Models.PaymentViewModel
@{
    ViewBag.Title = "Home";
}

<div class="container">

    <form action="@Url.Action("pay", "payment")" method="post">

        <fieldset>
            <legend>GoPay!</legend>

            <div>
                @Html.ValidationSummary(false)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CardNumber)
                @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control", @placeholder = "•••• •••• •••• ••••", @maxlength = "19" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NameOnCard)
                @Html.TextBoxFor(m => m.NameOnCard, new { @class = "form-control", @placeholder = "", @maxlength = "30" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CardSecurityCode)
                <div class="input-group">
                    @Html.TextBoxFor(m => m.CardSecurityCode, new { @class = "form-control", @placeholder = "••••", @maxlength = "4" })
                    <div class="input-group-addon">?</div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CardExpirationMonth)
                @Html.DropDownListFor(m => m.CardExpirationMonth, Model.ExpirationMonths, "Select", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CardExpirationYear)
                @Html.DropDownListFor(m => m.CardExpirationYear, Model.ExpirationYears, "Select", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CardFlag)
                @Html.DropDownListFor(m => m.CardFlag, Model.CardFlags, "Select", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Amount)
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @placeholder = "R$", @maxlength = "10", @pattern = @"^\d+(\.|\,)\d{2}$" })
            </div>

        </fieldset>

        <button type="submit" class="btn btn-success">Pay Now</button>

    </form>

</div>

@section css{
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />
}

@section js{
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/js/payment.gateway.v2.js"></script>
}
